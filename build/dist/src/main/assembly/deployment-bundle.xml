<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>deployment-bundle</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>../../app/api/${project.build.directory}</directory>
            <outputDirectory/>
            <includes>
                <include>*-beanstalk.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../../app/ui/${project.build.directory}</directory>
            <outputDirectory/>
            <includes>
                <include>*-beanstalk.zip</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>cloudformation</directory>
            <includes>
                <include>../../cloudformation/*.template</include>
            </includes>
            <outputDirectory>cloudformation</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>